<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        app:key="signature"
        app:title="@string/signature_title"
        app:useSimpleSummaryProvider="true"/>

    <EditTextPreference
        app:key="reply"
        app:defaultValue="reply"
        app:title="@string/digit_phrase"
        app:useSimpleSummaryProvider="true" />

    <ListPreference
        app:key="hello"
        app:defaultValue="reply"
        app:entries="@array/lock_entries"
        app:entryValues="@array/lock_values"
        app:title="@string/ask_for_lock"
        app:useSimpleSummaryProvider="true" />

</PreferenceScreen>